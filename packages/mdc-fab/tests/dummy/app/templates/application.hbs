<h2 id="title">Floating Action Buttons</h2>

<h3>Standard</h3>
<p>{{mdc-fab icon="add"}}</p>
<p>{{mdc-fab-link-to null "index" icon="add" label="Create"}}</p>


<h3>Mini</h3>
{{mdc-fab icon="add" mini=true}}

<h3>Extended</h3>

<p>{{mdc-fab icon="add" label="Create"}}</p>
<p>{{mdc-fab icon="add" label="Create" labelPosition="left"}}</p>
<p>{{mdc-fab label="Create"}}</p>

<h3>Exited</h3>

<button {{action "toggleExited"}}>{{if exited "Show FAB" "Hide FAB"}}</button>

<p>{{mdc-fab icon="add" exited=exited}}</p>

