<h2 id="title">Linear Stepper</h2>

{{#mdc-button style="unelevated" click=(action (mut error) "This is an error")}}Set Error{{/mdc-button}}

{{#mdc-stepper linear=true complete=(action "complete")}}
  {{#mdc-step as |completed error|}}
    {{#mdc-step-label}}
      {{mdc-step-label-indicator}}

      {{#mdc-step-title}}
        {{#mdc-step-title-text}}Title of Step 1{{/mdc-step-title-text}}
        {{#mdc-step-title-message}}{{if completed "Step 1 is complete" "Step 1 is not complete"}}{{/mdc-step-title-message}}
      {{/mdc-step-title}}
    {{/mdc-step-label}}

    {{mdc-step-content}}

    {{#mdc-step-actions}}
      {{#mdc-step-button action="next" style="unelevated"}}Continue{{/mdc-step-button}}
      {{#mdc-step-button action="skip"}}Skip{{/mdc-step-button}}
      {{#mdc-step-button action="cancel"}}Cancel{{/mdc-step-button}}
    {{/mdc-step-actions}}
  {{/mdc-step}}

  {{#mdc-step editable=true error=error as |completed error|}}
    {{#mdc-step-label}}
      {{mdc-step-label-indicator}}

      {{#mdc-step-title}}
        {{#mdc-step-title-text}}Step 2{{/mdc-step-title-text}}

        {{#mdc-step-title-message}}
          {{#if error}}
            {{error}}
          {{else if completed}}
            Step 2 is complete
          {{else}}
            Step 2 is not complete
          {{/if}}
        {{/mdc-step-title-message}}
      {{/mdc-step-title}}

    {{/mdc-step-label}}

    {{mdc-step-content}}

    {{#mdc-step-actions}}
      {{#mdc-step-button action="next" style="unelevated"}}Continue{{/mdc-step-button}}
      {{#mdc-step-button action="back"}}Back{{/mdc-step-button}}
    {{/mdc-step-actions}}
  {{/mdc-step}}

  {{#mdc-step optional=true editable=true}}
    {{#mdc-step-label}}
      {{mdc-step-label-indicator}}

      {{#mdc-step-title}}
        {{#mdc-step-title-text}}Step 3{{/mdc-step-title-text}}
        {{#mdc-step-title-message}}Optional{{/mdc-step-title-message}}
      {{/mdc-step-title}}
    {{/mdc-step-label}}

    {{mdc-step-content}}

    {{#mdc-step-actions}}
      {{#mdc-step-button action="next" style="unelevated"}}Continue{{/mdc-step-button}}
      {{#mdc-step-button action="skip"}}Skip{{/mdc-step-button}}
      {{#mdc-step-button action="back"}}Back{{/mdc-step-button}}
    {{/mdc-step-actions}}
  {{/mdc-step}}

  {{#mdc-step}}
    {{#mdc-step-label}}
      {{mdc-step-label-indicator}}

      {{#mdc-step-title}}
        {{#mdc-step-title-text}}Step 4{{/mdc-step-title-text}}
        {{#mdc-step-title-message}}Message for Step 4{{/mdc-step-title-message}}
      {{/mdc-step-title}}
    {{/mdc-step-label}}

    {{mdc-step-content}}

    {{#mdc-step-actions}}
      {{#mdc-step-button action="next" style="unelevated"}}Continue{{/mdc-step-button}}
      {{#mdc-step-button action="back"}}Back{{/mdc-step-button}}
    {{/mdc-step-actions}}
  {{/mdc-step}}
{{/mdc-stepper}}