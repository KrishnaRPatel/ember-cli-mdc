{{#mdc-snackbar-surface}}
  {{#if (has-block)}}
    {{yield}}
  {{else}}
    {{#mdc-snackbar-label}}{{label}}{{/mdc-snackbar-label}}

    {{#if actions}}
      {{#mdc-snackbar-actions}}
        {{#mdc-snackbar-button click=action.handler}}{{action.text}}{{/mdc-snackbar-button}}
        {{#if dismissible}}
          {{mdc-snackbar-dismiss dismissIcon}}
        {{/if}}
      {{/mdc-snackbar-actions}}
    {{/if}}
  {{/if}}
{{/mdc-snackbar-surface}}