<h2 id="title">Material Design Buttons</h2>

<h3>Default Button</h3>
<MdcButton @label="Default (inline)" />

<MdcButton>
  <MdcButtonLabel>Default (block)</MdcButtonLabel>
</MdcButton>

<h3>Button Styles</h3>
<MdcButton @style="raised" @label="Raised" />

<MdcButton @style="outlined" @label="Outlined" />
<MdcButton @style="unelevated" @label="Unelevated" />

<h3>Dense Button</h3>
<MdcButton @dense={{true}} @label="Dense" />

<h3>Disabled Button</h3>
<MdcButton @disabled={{true}} @style="outlined" @label="Disabled" />

<h3>Button Icon</h3>

<MdcButton @style="raised" @leadingIcon="event" @label="Add to Calendar" />

<MdcButton @style="raised" @trailingIcon="check" @label="Submit" />

<h3>Link Button</h3>

{{mdc-button-linkto "Go Forward (Inline)" "dummy" style="raised" trailingIcon="arrow_forward"}}

{{#mdc-button-linkto "dummy" style="raised"}}
  <MdcButtonLabel>Go Forward (Block)</MdcButtonLabel>
  {{mdc-button-icon "arrow_forward"}}
{{/mdc-button-linkto}}

<h3>Themed Button</h3>

<MdcButton @style="raised" @themePrimaryColor="white">Theme Button</MdcButton>