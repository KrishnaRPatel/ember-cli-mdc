<button class="mdc-button">
  <div class="mdc-button__ripple"></div>
  <span class="mdc-button__label">{{@label}}</span>
</button>

{{#unless (has-block)}}
  <MdcButtonRipple />

  {{#if leadingIcon}}
    {{mdc-button-icon leadingIcon}}
  {{/if}}

  <MdcButtonLabel>{{label}}</MdcButtonLabel>

  {{#if trailingIcon}}
    {{mdc-button-icon trailingIcon}}
  {{/if}}
{{else}}
  {{yield}}
{{/unless}}
