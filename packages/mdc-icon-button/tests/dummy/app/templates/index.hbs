<h3>Icon Button</h3>

<MdcIconButton @icon="favorite" {{on "click" this.onClick}} />
<MdcIconButton @icon="favorite" disabled={{true}} />

<h3>Icon Button Link</h3>
<MdcIconButtonLinkTo @route="dummy" @icon="arrow_back" @iconClass="foo" disabled={{true}} />

<h3>Icon Button Toggle</h3>

<div><button {{on "click" this.toggle}}>Toggle Initial State</button></div>
<div>
  <MdcIconButtonToggle @on={{this.on}}
                       @iconOn={{hash icon="favorite"}}
                       @iconOff={{hash icon="favorite_border"}}
                       @label={{"Add to"}}
                       @onChange={{this.onChange}} />
</div>
<div><b>State:</b> {{this.on}}</div>

