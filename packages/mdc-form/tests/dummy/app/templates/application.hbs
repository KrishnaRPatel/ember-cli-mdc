<h2 id="title" class="mdc-typography--headline4">Forms</h2>

<MdcForm @submit={{action "submit"}} @change={{action "valid"}} as |form|>
  <div>
    Email: <input type="email" name="email" required="true" />
  </div>

  <div>
    Password: <input type="password" name="password" required="true"/>
  </div>

  <div>
    <button type="submit">Submit</button>
  </div>
</MdcForm>
