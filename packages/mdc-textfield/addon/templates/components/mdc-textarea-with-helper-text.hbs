{{#unless (has-block)}}
  {{mdc-textarea label=label
                 style=style
                 fullWidth=fullWidth
                 dense=dense
                 noLabel=noLabel

                 invalid=validation

                 value=value
                 name=name
                 rows=rows
                 cols=cols
                 placeholder=placeholder
                 disabled=disabled
                 maxlength=maxlength
                 tabindex=tabindex
                 selectionEnd=selectionEnd
                 selectionStart=selectionStart
                 autocomplete=autocomplete
                 selectionDirection=selectionDirection
                 wrap=wrap
                 readonly=readonly
                 autofocus=autofocus
                 form=form
                 spellcheck=spellcheck
                 required=required}}
  {{#mdc-textfield-helper-text persistent=persistMessage validation=validation}}
    {{#if errorMessage}}
      {{errorMessage}}
    {{else if validationMessage}}
      {{validationMessage}}
    {{else if helperText}}
      {{helperText}}
    {{else}}
    {{/if}}
  {{/mdc-textfield-helper-text}}
{{else}}
  {{yield}}
{{/unless}}
