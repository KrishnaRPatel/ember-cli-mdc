{{mdc-textfield label=label
                style=style
                invalid=validation
                dense=dense

                type=(if showPassword "text" "password")
                trailingIcon=(hash icon=(if showPassword iconOn iconOff) clickable=true click=(action "toggle"))

                readonly=readonly
                required=required
                autofocus=autofocus
                value=value
                disabled=disabled
                size=size
                tabindex=tabindex
                minlength=minlength
                maxlength=maxlength
                name=name
                min=min
                max=max
                pattern=pattern
                accept=accept
                autocomplete=autocomplete
                autosave=autosave
                formaction=formaction
                formenctype=formenctype
                formmethod=formmethod
                formnovalidate=formnovalidate
                formtarget=formtarget
                height=height
                inputmode=inputmode
                multiple=multiple
                step=step
                width=width
                form=form
                selectionDirection=selectionDirection
                spellcheck=spellcheck

                action=action
                enter=enter
                insert-newline=insert-newline
                escape-press=escape-press
                focus-in=focus-in
                focus-out=focus-out
                key-press=key-press
                key-up=key-up}}
{{#mdc-textfield-helper-text persistent=persistMessage validation=validation}}
  {{#if errorMessage}}
    {{errorMessage}}
  {{else if validationMessage}}
    {{validationMessage}}
  {{else if helperText}}
    {{helperText}}
  {{else}}
  {{/if}}
{{/mdc-textfield-helper-text}}


