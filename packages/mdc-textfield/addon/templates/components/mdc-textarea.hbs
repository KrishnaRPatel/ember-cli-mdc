{{#unless (has-block)}}
  {{mdc-textfield-textarea id=textAreaId

                           value=value
                           name=name
                           rows=rows
                           cols=cols
                           placeholder=placeholder
                           disabled=disabled
                           maxlength=maxlength
                           tabindex=tabindex
                           selectionEnd=selectionEnd
                           selectionStart=selectionStart
                           autocomplete=autocomplete
                           selectionDirection=selectionDirection
                           wrap=wrap
                           readonly=readonly
                           autofocus=autofocus
                           form=form
                           spellcheck=spellcheck
                           required=required}}
    {{mdc-notched-outline label=label for=textAreaId noLabel=noLabel}}
{{else}}
  {{yield}}
{{/unless}}

