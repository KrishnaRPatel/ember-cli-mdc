{{#if hasLeadingIcon}}
  {{mdc-textfield-icon icon clickable=iconClickable}}
{{/if}}
{{mdc-textfield-input id=inputId
                      readonly=readonly
                      required=required
                      autofocus=autofocus
                      value=value
                      disabled=disabled
                      size=size
                      tabindex=tabindex
                      maxlength=maxlength
                      name=name
                      min=min
                      max=max
                      pattern=pattern
                      accept=accept
                      autocomplete=autocomplete
                      autosave=autosave
                      formaction=formaction
                      formenctype=formenctype
                      formmethod=formmethod
                      formnovalidate=formnovalidate
                      formtarget=formtarget
                      height=height
                      inputmode=inputmode
                      multiple=multiple
                      step=step
                      width=width
                      form=form
                      selectionDirection=selectionDirection
                      spellcheck=spellcheck
                      placeholder=(if isFullWidth label)
                      label=(if isFullWidth label)}}
{{#if notFullWidth}}
  {{#mdc-floating-label for=inputId}}{{label}}{{/mdc-floating-label}}
{{/if}}
{{#if hasTrailingIcon}}
  {{mdc-textfield-icon icon clickable=iconClickable}}
{{/if}}
{{#if notFullWidth}}
  {{#if isOutlined}}
    {{mdc-notched-outline}}
  {{else}}
    {{mdc-line-ripple}}
  {{/if}}
{{/if}}


