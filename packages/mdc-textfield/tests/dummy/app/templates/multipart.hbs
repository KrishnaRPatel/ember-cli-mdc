{{#mdc-textfield style="outlined" class="mdc-text-field__multipart" }}
  {{mdc-textfield-icon "credit_card" clickable=false}}

  {{mdc-textfield-input value=number type="text" class="cc-number" minlength=metadata.length maxlength=metadata.length size=22 keyUp=(action "formatCardNumber") required=true}}

  {{mdc-textfield-input value=cvc type="text" class="cc-cvc"  placeholder="CVC" minlength=metadata.cvc maxlength=metadata.cvc size=4 required=true}}

  {{mdc-textfield-input type="text" class="cc-expiry" placeholder="MM / YY" minlength=5 maxlength=5 size=7 required=true}}

  {{mdc-notched-outline label="Card details"}}
{{/mdc-textfield}}
