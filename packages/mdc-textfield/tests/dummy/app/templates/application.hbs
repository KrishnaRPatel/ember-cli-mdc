<h2 class="mdc-typography--headline4" id="title">Text Fields</h2>

<h3 class="mdc-typography--subtitle1">Standard</h3>

{{mdc-textfield label="Standard"}}

{{mdc-textfield label="Dense" dense=true}}

{{mdc-textfield label="Helper Text"
                helperText="Helper Text"
                helperTextPersistent=true}}

{{mdc-textfield label="Disabled" disabled=true}}

<h3 class="mdc-typography--subtitle1">Box</h3>

{{mdc-textfield label="Standard" style="box"}}

{{mdc-textfield label="Dense" style="box" dense=true}}

{{mdc-textfield label="Helper Text"
                style="box"
                helperText="Helper Text"
                helperTextPersistent=true}}

{{mdc-textfield label="Disabled" style="box" disabled=true}}

<h3 class="mdc-typography--subtitle1">Outlined</h3>

{{mdc-textfield label="Standard" style="outlined"}}

{{mdc-textfield label="Dense" style="outlined" dense=true}}

{{mdc-textfield label="Helper Text"
                style="outlined"
                helperText="Helper Text"
                helperTextPersistent=true}}

{{mdc-textfield label="Disabled" style="outlined" disabled=true}}

<h3 class="mdc-typography--subtitle1">Full Width</h3>

{{mdc-textfield label="Full Width" placeholder="Placeholder" style="fullwidth"}}
