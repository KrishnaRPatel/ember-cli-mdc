<h2 class="mdc-typography--headline4" id="title">Text Fields</h2>

<h3 class="mdc-typography--subtitle1">Standard</h3>

{{mdc-textfield label="Standard" required=true placeholder="Placeholder" value=value}}

{{mdc-textfield label="Dense" dense=true}}

{{mdc-textfield label="Helper Text"
                helperText="Helper Text"
                helperTextPersistent=true}}

{{mdc-textfield label="Disabled" disabled=true}}

<h3 class="mdc-typography--subtitle1">Box</h3>

{{mdc-textfield label="Standard" style="box"}}

{{mdc-textfield label="Dense" style="box" dense=true}}

{{mdc-textfield label="Helper Text"
                style="box"
                helperText="Helper Text"
                helperTextPersistent=true}}

{{mdc-textfield label="Disabled" style="box" disabled=true}}

<h3 class="mdc-typography--subtitle1">Outlined</h3>

{{mdc-textfield label="Standard" style="outlined"}}

{{mdc-textfield label="Dense" style="outlined" dense=true}}

{{mdc-textfield label="Helper Text"
                style="outlined"
                helperText="Helper Text"
                helperTextPersistent=true}}

{{mdc-textfield label="Disabled" style="outlined" disabled=true}}

<h3 class="mdc-typography--subtitle1">Box With Leading Icon</h3>

{{mdc-textfield label="Standard"
                style="box"
                icon="event"
                iconPosition="leading"}}

{{mdc-textfield label="Dense"
                style="box"
                dense=true
                icon="event"
                iconPosition="leading"}}

{{mdc-textfield label="Helper Text"
                style="box"
                helperText="Helper Text"
                helperTextPersistent=true
                icon="event"
                iconPosition="leading"}}

{{mdc-textfield label="Disabled"
                style="box"
                disabled=true
                icon="event"
                iconPosition="leading"}}

<h3 class="mdc-typography--subtitle1">Box With Trailing Icon</h3>

{{mdc-textfield label="Standard"
                style="box"
                icon="delete"
                iconPosition="trailing"}}

{{mdc-textfield label="Dense"
                style="box"
                dense=true
                icon="delete"
                iconPosition="trailing"}}

{{mdc-textfield label="Helper Text"
                style="box"
                helperText="Helper Text"
                helperTextPersistent=true
                icon="delete"
                iconPosition="trailing"}}

{{mdc-textfield label="Disabled"
                style="box"
                disabled=true
                icon="delete"
                iconPosition="trailing"}}

{{mdc-textfield label="Password"
                style="box"
                type=type
                icon=icon
                iconPosition="trailing"
                iconClick=(action "toggleVisibility")}}

<h3 class="mdc-typography--subtitle1">Outlined With Leading Icon</h3>

