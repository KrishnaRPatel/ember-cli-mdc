<h2 class="mdc-typography--headline5">Validation</h2>

<div class="text-field-row">
  <div class="text-field-container">
    {{mdc-textfield-with-helper-text style="outlined"
                                     label="Required"
                                     required=true}}
  </div>
  <div class="text-field-container">
    {{mdc-textfield-with-helper-text style="outlined"
                                     label="Min and Max"
                                     type="number"
                                     min=10
                                     max=10000
                                     helperText="Must be between 10 and 10000."}}
  </div>

  <div class="text-field-container">
    {{mdc-textfield-with-helper-text label="Pattern"
                                     pattern="[A-Za-z]{3}"
                                     helperText="Three letter country code."}}
  </div>

  <div class="text-field-container">
    {{mdc-textfield-with-helper-text label="Validation message"
                                     required=true
                                     type="number"
                                     helperText="10 <= n <= 10000"
                                     helperTextPersistent=true
                                     min=10
                                     max=10000
                                     validationMessages=validationMessages}}
  </div>
</div>

