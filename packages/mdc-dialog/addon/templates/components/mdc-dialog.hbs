<div class="mdc-dialog__container">
  <div class="mdc-dialog__surface">
    {{#if title}}
      <h2 class="mdc-dialog__title" id="{{elementId}}__title">{{title}}</h2>
    {{/if}}

    <div class="mdc-dialog__content" id="{{elementId}}__content">
      {{yield}}
    </div>

    {{#if hasActions}}
      <footer class="mdc-dialog__actions">
        {{#if hasCloseButton}}
          {{#mdc-dialog-button type="button" action="close" default=closeIsDefault}}
            {{closeButtonText}}
          {{/mdc-dialog-button}}
        {{/if}}

        {{#if hasAcceptButton}}
          {{#mdc-dialog-button type="button" action="accept" default=acceptIsDefault}}
            {{acceptButtonText}}
          {{/mdc-dialog-button}}
        {{/if}}
      </footer>
    {{/if}}
  </div>
</div>
<div class="mdc-dialog__scrim"></div>