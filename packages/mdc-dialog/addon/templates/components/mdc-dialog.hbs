<div class="mdc-dialog__container">
  <div class="mdc-dialog__surface">
    {{#if title}}
      <h2 class="mdc-dialog__title" id="{{elementId}}__title">{{title}}</h2>
    {{/if}}

    <div class="mdc-dialog__content" id="{{elementId}}__content">
      {{yield}}
    </div>

    {{#if hasActions}}
      <footer class="mdc-dialog__actions">
        {{#if negativeButton}}
          {{mdc-dialog-button type="button" action=negativeButton.action default=negativeButton.default label=negativeButton.label}}
        {{/if}}

        {{#if positiveButton}}
          {{mdc-dialog-button type="button" action=positiveButton.action default=positiveButton.default label=positiveButton.label}}
        {{/if}}
      </footer>
    {{/if}}
  </div>
</div>
<div class="mdc-dialog__scrim"></div>