<h2 id="title">Switch</h2>

<div class="mdc-switch-row">
  <div class="mdc-switch-container">
    <div><MdcSwitch @checked={{checked1}} /></div>
    <div>Checked: {{checked1}}</div>

  </div>
  <div class="mdc-switch-container">
    <div><MdcSwitch @checked={{true}} @disabled={{true}} /></div>
  </div>

  <div class="mdc-switch-container">
    <div><MdcSwitchWithLabel @label="on/off" @checked={{on}} /></div>
    <div>On: {{on}}</div>
  </div>
</div>
