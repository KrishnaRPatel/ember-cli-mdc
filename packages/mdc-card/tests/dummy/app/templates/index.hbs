<h2 id="title">Cards</h2>

<h3>Standard</h3>

{{#mdc-card class="standard"}}
  <div class="content">
    The card content goes here.
  </div>

  {{#mdc-card-actions}}
    {{#mdc-card-action-buttons}}
      {{#mdc-card-action-button}}Action 1{{/mdc-card-action-button}}
      {{#mdc-card-action-button}}Action 2{{/mdc-card-action-button}}
    {{/mdc-card-action-buttons}}

    {{#mdc-card-action-icons}}
      {{mdc-card-action-icon "share" title="Share"}}
      {{mdc-card-action-icon "more_vert" title="More options"}}
    {{/mdc-card-action-icons}}
  {{/mdc-card-actions}}
{{/mdc-card}}

<h3>Actionable</h3>

{{#mdc-card class="actionable"}}
  {{#mdc-card-primary-action}}
    Actionable Section
  {{/mdc-card-primary-action}}

  Content outside the actionable area...
{{/mdc-card}}

<h3>Media</h3>

{{#mdc-card class="media"}}
  {{#mdc-card-media scale="16-9"}}
    {{#mdc-card-media-content}}16x9 Media{{/mdc-card-media-content}}
  {{/mdc-card-media}}

{{/mdc-card}}

{{#mdc-card class="media"}}
  {{#mdc-card-media scale="square"}}
    {{#mdc-card-media-content}}Square Media{{/mdc-card-media-content}}
  {{/mdc-card-media}}

{{/mdc-card}}

<h3>Full Bleed</h3>

{{#mdc-card class="full-bleed"}}

  {{#mdc-card-actions fullBleed=true}}
    {{mdc-card-action-button label="Full Bleed"}}
    {{mdc-button-icon "arrow_forward"}}
  {{/mdc-card-actions}}
{{/mdc-card}}
