<h2 id="title">Cards</h2>

<h3>Standard</h3>

<MdcCard @class="standard">
  <MdcCardContent>
    The card content goes here.
  </MdcCardContent>

  <MdcCardActions>
    <MdcCardActionButtons>
      <MdcCardActionButton>Action 1</MdcCardActionButton>
      <MdcCardActionButton>Action 2</MdcCardActionButton>
    </MdcCardActionButtons>

    <MdcCardActionIcons>
      {{mdc-card-action-icon "share" title="Share"}}
      {{mdc-card-action-icon "more_vert" title="More options"}}
    </MdcCardActionIcons>
  </MdcCardActions>
</MdcCard>

<h3>Outlined</h3>

<MdcCard @outlined={{true}}>
  <MdcCardContent>This is an outlined card.</MdcCardContent>
</MdcCard>

<h3>Actionable</h3>

<MdcCard @class="actionable">
  <MdcCardPrimaryAction>
    Actionable Section
  </MdcCardPrimaryAction>

  Content outside the actionable area...
</MdcCard>

<h3>Media</h3>

<MdcCard @class="media">
  <MdcCardMedia @scale="16-9">
    <MdcCardMediaContent>16x9 Media</MdcCardMediaContent>
  </MdcCardMedia>

</MdcCard>

<MdcCard @class="media">
  <MdcCardMedia @scale="square">
    <MdcCardMediaContent>Square Media</MdcCardMediaContent>
  </MdcCardMedia>

</MdcCard>

<h3>Full Bleed</h3>

<MdcCard @class="full-bleed">

  <MdcCardActions @fullBleed={{true}}>
    <MdcCardActionButton @label="Full Bleed" />
    {{mdc-button-icon "arrow_forward"}}
  </MdcCardActions>
</MdcCard>
