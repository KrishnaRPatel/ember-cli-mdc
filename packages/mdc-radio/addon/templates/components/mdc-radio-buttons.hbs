{{#if (has-block)}}
  {{yield (hash name=name)}}
{{else}}
  {{#each buttons as |button|}}
    {{#if button.label}}
      {{#mdc-radio-with-label id=button.id
                              name=name
                              value=button.value
                              form=button.form
                              disabled=button.disabled
                              checked=button.checked
                              required=required
                              form=form
                              change=(action "change")}}{{button.label}}{{/mdc-radio-with-label}}
    {{else}}
      {{mdc-radio id=button.id
                  name=button.name
                  value=button.value
                  form=button.form
                  disabled=button.disabled
                  required=required
                  form=form
                  change=(action "change")}}
    {{/if}}
  {{/each}}
{{/if}}
